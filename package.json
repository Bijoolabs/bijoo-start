{
  "name": "project_name",
  "version": "1.0.0",
  "description": "Development setup",
  "author": "BijooLabs",
  "private": true,
  "scripts": {
    "clean": "rimraf build",
    "setup": "npm run clean && mkdir build && cd build && mkdir scripts styles images && npm run build",
    "build": "npm run build:js -s & npm run build:css -s & npm run build:images -s",
    "build:js": "browserify app/scripts/main.js -o build/scripts/main.js -t [ babelify --presets [ es2015 ] ]",
    "build:css": "postcss -u postcss-import -u postcss-custom-properties -u postcss-calc -u postcss-custom-media -u postcss-media-minmax -u postcss-custom-selectors -u postcss-color-function -u postcss-selector-matches -u postcss-selector-not -u postcss-nested -u autoprefixer --autoprefixer.browsers \"> 1%\" \"IE 9\" -u postcss-neat --postcss-neat.neatMaxWidth \"100%\" -o build/styles/main.css app/styles/main.css",
    "build:images": "imagemin app/images/** build/images/ -p",
    "watch": "parallelshell \"npm run livereload\" \"npm run watch:js\" \"npm run watch:css\"",
    "watch:js": "watch \"npm run build:js -s\" app/scripts/",
    "watch:css": "watch \"npm run build:css -s\" app/styles/",
    "livereload": "livereloadx -p 35729 build/",
    "critical": "critical http://getbootstrap.com/ > build/styles/critical.css -m"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "critical": "^0.7.1",
    "grunt-critical": "^0.2.0",
    "grunt-eslint": "^18.0.0",
    "grunt-uncss": "^0.5.0",
    "imagemin": "^4.0.0",
    "livereloadx": "^0.3.9",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.18",
    "postcss-calc": "^5.2.0",
    "postcss-cli": "^2.5.1",
    "postcss-color-function": "^2.0.0",
    "postcss-color-hex-alpha": "^2.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.0",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-import": "^8.0.2",
    "postcss-media-minmax": "^2.1.1",
    "postcss-neat": "^2.4.2",
    "postcss-nested": "^1.0.0",
    "postcss-quantity-queries": "^0.4.0",
    "postcss-selector-matches": "^2.0.1",
    "postcss-selector-not": "^2.0.0",
    "rimraf": "^2.5.2",
    "stylelint": "^4.4.0",
    "watch": "^0.17.1"
  },
  "browser": {
    "jquery": "/vendor/jquery-2.2.0.min.js"
  },
  "browserify-shim": {
    "jquery": "global:$"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
}
