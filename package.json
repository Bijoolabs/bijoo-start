{
  "name": "project_name",
  "version": "1.0.0",
  "description": "Development setup",
  "author": "BijooLabs",
  "private": true,
  "scripts": {
    "setup": "rimraf build && mkdir build && cd build && mkdir scripts styles images && npm run build",
    "build": "npm run build:js -s & npm run build:css -s & npm run build:images -s",
    "build:js": "browserify app/scripts/main.js -o build/scripts/main.js -t [ babelify --presets [ es2015 ] ]",
    "build:css": "postcss -u postcss-import -u postcss-custom-properties -u postcss-calc -u postcss-custom-media -u postcss-media-minmax -u postcss-custom-selectors -u postcss-color-function -u postcss-selector-matches -u postcss-selector-not -u postcss-nested -u autoprefixer '> 1%' 'IE 9' -o build/styles/main.css app/styles/main.css",
    "build:images": "imagemin app/images/** build/images/ -p",
    "watch": "parallelshell \"npm run watch:js\" \"npm run watch:css\"",
    "watch:js": "watch \"npm run build:js -s\" app/scripts/",
    "watch:css": "watch \"npm run build:css -s\" app/styles/"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "css-mqpacker": "^4.0.0",
    "csswring": "^4.2.1",
    "grunt": "^0.4.5",
    "grunt-browserify": "^4.0.1",
    "grunt-concurrent": "^2.2.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-connect": "^0.11.2",
    "grunt-contrib-copy": "^0.8.2",
    "grunt-contrib-imagemin": "^1.0.0",
    "grunt-contrib-uglify": "^0.11.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-critical": "^0.2.0",
    "grunt-eslint": "^18.0.0",
    "grunt-newer": "^1.1.2",
    "grunt-postcss": "^0.7.2",
    "grunt-uncss": "^0.5.0",
    "imagemin": "^4.0.0",
    "jit-grunt": "^0.10.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.18",
    "postcss-calc": "^5.2.0",
    "postcss-cli": "^2.5.1",
    "postcss-color-function": "^2.0.0",
    "postcss-color-hex-alpha": "^2.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.0",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-import": "^8.0.2",
    "postcss-media-minmax": "^2.1.1",
    "postcss-neat": "^2.4.2",
    "postcss-nested": "^1.0.0",
    "postcss-quantity-queries": "^0.4.0",
    "postcss-selector-matches": "^2.0.1",
    "postcss-selector-not": "^2.0.0",
    "rimraf": "^2.5.2",
    "stylelint": "^4.4.0",
    "time-grunt": "^1.3.0",
    "watch": "^0.17.1"
  },
  "browser": {
    "jquery": "/vendor/jquery-2.2.0.min.js"
  },
  "browserify-shim": {
    "jquery": "global:$"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
}
